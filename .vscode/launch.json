{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": ["."],
            "runtimeArgs": ["--remote-debugging-port=9222"],
            // Ensure VS Code knows where the compiled JS lives for source map resolution
            "outFiles": ["${workspaceFolder}/dist/main/**/*.js"],
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "outputCapture": "std",
            // Build in development mode for sourcemaps during debugging
            "preLaunchTask": "npm: build:debug"
        },
        {
            "name": "Renderer (Chromium) Attach",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "timeout": 30000,
            // When multiple BrowserWindows are open, let me pick the target
            "targetSelection": "pick",
            // Help VS Code map bundled code back to TS sources when using Vite
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*",
                "vite:///*": "${webRoot}/*",
                "*/src/*": "${workspaceFolder}/src/*",
                "*/dist/*": "${workspaceFolder}/dist/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Electron: Main + Renderer",
            "configurations": ["Debug Main Process", "Renderer (Chromium) Attach"]
        }
    ]
}
