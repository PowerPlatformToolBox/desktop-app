{
    "extends": "buildScripts/electron-builder-base.json",
    "forceCodeSigning": true,
    "mac": {
        "target": [
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "category": "public.app-category.developer-tools",
        "icon": "icons/icon.icns",
        "identity": "Developer ID Application",
        "gatekeeperAssess": true,
        "hardenedRuntime": true,
        "entitlements": "./buildScripts/entitlements.mac.plist",
        "entitlementsInherit": "./buildScripts/entitlements.mac.plist",
        "type": "distribution",
        "notarize": false
    },
    "dmg": {
        "sign": true
    }
}