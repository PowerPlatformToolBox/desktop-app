{
    "appId": "com.powerplatform.toolbox",
    "productName": "Power Platform ToolBox",
    "artifactName": "Power-Platform-ToolBox-${version}-${arch}-${os}.${ext}",
    "directories": {
        "output": "build"
    },
    "files": ["dist/**/*", "assets/**/*", "package.json"],
    "publish": {
        "provider": "github",
        "owner": "PowerPlatformToolBox",
        "repo": "desktop-app"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["arm64"]
            }
        ],
        "icon": "icons/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    }
}
