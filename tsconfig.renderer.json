{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2022", "DOM"],
        "types": ["node"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        // Ensure our ambient renderer declarations (e.g. window.toolboxAPI) are picked up reliably
        "typeRoots": ["./node_modules/@types", "./src/renderer"]
    },
    "include": ["src/renderer/**/*", "src/common/**/*"],
    "exclude": ["node_modules", "dist", "build"]
}
